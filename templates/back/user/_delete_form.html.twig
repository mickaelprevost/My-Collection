<form
	method="post" action="{{ path('app_back_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
	{# Adds a CSRF token for security purposes when submitting the form #}
	<input
	type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
	{# Displays a delete button to delete the user #}
	<button class="btn btn-danger">Delete</button>
</form>
