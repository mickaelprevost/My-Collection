{% extends 'base.html.twig' %}

{% block title %}Voir le commentaire
{% endblock %}

{% block body %}

	<h1 class="mt-3 mb-1">Voir le commentaire</h1>

	<a class="btn btn-primary mt-3 mb-3" href="{{ path('app_back_review_index') }}">Retour à la liste des commentaires</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Commentaire</th>
				<th>Utilisateur</th>
				<th>Note</th>
				<th>Date de publication</th>
				<th>Date de mise à jour</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>{{ review.id }}</td>
				<td>{{ review.comment }}</td>

				<td>{{ review.user.username }}</td>
				<td>{{ review.rating }}</td>
				<td>{{ review.publishedAt ? review.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
				<td>{{ review.updatedAt ? review.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-secondary mt-3 mb-4" href="{{ path('app_back_review_edit', {'id': review.id}) }}">Modifier</a>

	{{ include('back/review/_delete_form.html.twig') }}
{% endblock %}
