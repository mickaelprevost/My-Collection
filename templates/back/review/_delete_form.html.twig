<form
	method="post" action="{{ path('app_back_review_delete', {'id': review.id}) }}" onsubmit="return confirm('Êtes-vous sûr de supprimer ce commentaire ?');">
	{# Adds a CSRF token for security purposes when submitting the form #}
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
	<button class="btn btn-danger">Supprimer</button>
</form>
