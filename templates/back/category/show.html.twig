{% extends 'base.html.twig' %}

{% block title %}Categorie
{% endblock %}

{% block body %}
	<h1 class="mt-3 mb-1">Catégorie</h1>

	<a class="btn btn-primary mt-3 mb-3" href="{{ path('app_back_category_new') }}">Créer une catégorie</a>
	<a class="btn btn-primary mt-3 mb-3" href="{{ path('app_back_category_index') }}">retour à la liste des catégories</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
			</tr>
		</thead>

		<tbody>
			<tr>
				<td>{{ category.id }}</td>
				<td>{{ category.name }}</td>
			</tr>
		</tbody>
	</table>


	<a class="btn btn-secondary mt-3 mb-4" href="{{ path('app_back_category_edit', {'id': category.id}) }}">Modifier</a>

	{{ include('back/category/_delete_form.html.twig') }}
{% endblock %}
