{% extends 'base.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col-12">
				<h2 class="mt-4 mb-4">Messagerie</h2>
				<p>
					<strong>Message de: </strong>
					{{ message.sender.username}}
				</p>
				<p>
					<strong>Titre: </strong>
					{{message.title}}
				</p>
				<div>
					<strong>Contenu: </strong>
					{{ message.content|striptags('<a>')|raw }}
				</div>

				<a class="btn btn-primary mt-3" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
					Voir mes dossiers
				</a>
				<a class="btn btn-primary mt-3" href="{{ path('app_message_received')}}">
					Retour Ã  la liste des messages
				</a>
			</div>
		</div>
	</section>
{% endblock %}
